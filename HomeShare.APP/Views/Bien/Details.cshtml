@model HoliDayRental.Models.BienDetails

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center text-primary">Détails de l'offre</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescLongue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescLongue)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombrePersonnes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombrePersonnes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pays)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pays)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ville)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ville)
            @Html.DisplayFor(model => model.Rue)
            @Html.DisplayFor(model => model.Numero)
            @Html.DisplayFor(model => model.CodePostal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Photo)
        </dd>
        @if (Model.AssuranceObligatoire)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.AssuranceObligatoire)
            </dt>
            <dd class = "col-sm-10 text-danger">
                L'assurance est obligatoire pour ce bien.
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreation)
        </dd>
    </dl>
</div>
